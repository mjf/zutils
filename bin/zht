#! /bin/sh

# zht - Zone Human Time
# Copyright (C) 2014 Matous J. Fialka, <http://mjf.cz/>
# Released under the terms of The MIT License

# shellcheck disable=SC3057

if [ $# -ne 1 ]
then
	printf -- 'Usage: zht [SECONDS]\n'
	exit 0
fi

for='w d h m s'
res=0

if [ "$1" -eq 0 ]
then
	printf -- '0\n'
else
	for fld in $for
	do
		case "$fld" in
			"${for:8:1}") res=$(($1%60)) ;;
			"${for:6:1}") res=$(($1/60%60)) ;;
			"${for:4:1}") res=$(($1/3600%24)) ;;
			"${for:2:1}") res=$(($1/86400%7)) ;;
			"${for:0:1}") res=$(($1/604800)) ;;
		esac

		if [ $res -ne 0 ]
		then
			printf -- '%d%c' $res "$fld"
		fi

		res=0
	done

	printf -- '\n'

fi 2>/dev/null

exit 0

# vi:ft=sh
