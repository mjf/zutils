#! /bin/sh

# z - Dig wrapper
# Copyright (C) 2014, 2023 Matous J. Fialka, <http://mjf.cz/>
# Released under the terms of The MIT License

# shellcheck disable=SC2034
# shellcheck disable=SC3030
# shellcheck disable=SC3054

PROGRAM="${0##*/}"
VERSION='0.2.1'
RELEASE=''
AUTHORS='2014, 2023 Matou≈° Jan Fialka, <https://mjf.cz/>'
LICENSE='MIT'

if ! DIG=$(command -v dig); then
	echo "${PROGRAM}: dig(1) cannot be found." 1>&2
	exit 1
fi

DIG_OPTS=(
	'+trace'
	'+noall'
	'+nocmd'
	'+noadditional'
	'+noidentify'
	'+nocomments'
	'+answer'
)
OPTS=("${@:-.}")

${DIG} 2>/dev/null "${DIG_OPTS[@]}" "${OPTS[@]}" +nomultiline|
while read -r NAME REST; do
	case "${NAME}" in
	"${OPTS[$((${#OPTS[@]}-1))]}"|"${OPTS[$((${#OPTS[@]}-1))]}."|*.in-addr.arpa.)
		echo "${NAME} ${REST}"
		;;
	*)
	esac
done

# vi:ft=sh:nowrap:
